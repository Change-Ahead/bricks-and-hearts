@model PropertyViewModel

@{
    ViewData["Title"] = "Add Property";
}

<h1>Add new property</h1>

<hr/>

<form method="post" asp-controller="Landlord" asp-action="AddNewProperty" class="w-50">
    <h4>Address</h4>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="my-3">
        <label asp-for="Address!.AddressLine1" class="form-label">Address Line 1</label>
        <input asp-for="Address!.AddressLine1" class="form-control" required/>
        <span asp-validation-for="Address!.AddressLine1" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="Address!.AddressLine2" class="form-label">Address Line 2</label>
        <input asp-for="Address!.AddressLine2" class="form-control"/>
        <span asp-validation-for="Address!.AddressLine2" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="Address!.AddressLine3" class="form-label">Address Line 3</label>
        <input asp-for="Address!.AddressLine3" class="form-control"/>
        <span asp-validation-for="Address!.AddressLine3" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="Address!.TownOrCity" class="form-label">Town or City</label>
        <input asp-for="Address!.TownOrCity" class="form-control" required/>
        <span asp-validation-for="Address!.TownOrCity" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="Address!.County" class="form-label">County</label>
        <input asp-for="Address!.County" class="form-control" required/>
        <span asp-validation-for="Address!.County" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="Address!.Postcode" class="form-label">Postcode</label>
        <input asp-for="Address!.Postcode" class="form-control" required/>
        <span asp-validation-for="Address!.Postcode" class="text-danger"></span>
    </div>
    <h4>Property details</h4>
    <div class="my-3">
        <label asp-for="PropertyType" class="form-label">Property type</label>
        <select asp-for="PropertyType" class="form-select" required>
            <option selected disabled value="">Choose a property type</option>
            <option>Top floor flat</option>
            <option>Mid floor flat</option>
            <option>Ground floor flat</option>
            <option>Mid terrace</option>
            <option>End terrace</option>
            <option>Detached</option>
            <option>Semi-detached</option>
        </select>
        <span asp-validation-for="PropertyType" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="NumOfBedrooms" class="form-label">Number of bedrooms</label>
        <input asp-for="NumOfBedrooms" class="form-control" required/>
        <span asp-validation-for="NumOfBedrooms" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="Rent" class="form-label">Rent Â£ (pcm)</label>
        <input asp-for="Rent" class="form-control" required/>
        <span asp-validation-for="Rent" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mt-4">
        <input type="submit" value="Add property" class="btn btn-primary"/>
    </div>
</form>
