@model PropertyViewModel

@{
    ViewData["Title"] = "Add Property";
}

<h1>Register new property</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Landlord" asp-action="AddNewProperty">
            <h4>Address</h4>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="Address.AddressLine1" class="control-label">Address Line 1</label>
                <input asp-for="Address.AddressLine1" class="form-control" style="max-width: 12rem"/>
                <span asp-validation-for="Address.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Address.AddressLine2" class="control-label">Address Line 2</label>
                <input asp-for="Address.AddressLine2" class="form-control" style="max-width: 12rem"/>
                <span asp-validation-for="Address.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Address.AddressLine3" class="control-label">Address Line 3</label>
                <input asp-for="Address.AddressLine3" class="form-control" style="max-width: 12rem"/>
                <span asp-validation-for="Address.AddressLine3" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Address.TownOrCity" class="control-label">Town or City</label>
                <input asp-for="Address.TownOrCity" class="form-control" style="max-width: 12rem"/>
                <span asp-validation-for="Address.TownOrCity" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Address.County" class="control-label">County</label>
                <input asp-for="Address.County" class="form-control" style="max-width: 12rem"/>
                <span asp-validation-for="Address.County" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Address.Postcode" class="control-label">Postcode</label>
                <input asp-for="Address.Postcode" class="form-control" style="max-width: 12rem"/>
                <span asp-validation-for="Address.Postcode" class="text-danger"></span>
            </div>
            <h4>Property details</h4>
            <div class="form-group my-3">
                <label asp-for="PropertyType" class="control-label">Property type</label>
                <select asp-for="PropertyType" class="form-control" style="max-width: 12rem">
                      <option>Top/Ground/Mid Floor Flat</option>
                      <option>Mid/End Terrace</option>
                      <option>(Semi)-detached</option>
                </select>
                @*<input asp-for="PropertyType" class="form-control" style="max-width: 12rem"/>*@
                <span asp-validation-for="PropertyType" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="NumOfBedrooms" class="control-label">Number of bedrooms</label>
                <input asp-for="NumOfBedrooms" class="form-control" style="max-width: 12rem"/>
                <span asp-validation-for="NumOfBedrooms" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Rent" class="control-label">Rent</label>
                <input asp-for="Rent" class="form-control" style="max-width: 12rem"/>
                <span asp-validation-for="NumOfBedrooms" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Description" class="control-label">Descriptions</label>
                <input asp-for="Description" class="form-control" style="max-width: 12rem"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Register" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>