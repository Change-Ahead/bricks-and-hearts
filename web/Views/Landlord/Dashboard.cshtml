@model LandlordDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}


<div>
    <div class="row">
        <div class="col-1">
            @* TODO BNH-99: Replace icon with profile picture *@
            <img alt="profile picture" src="https://www.pngarts.com/files/10/Default-Profile-Picture-Transparent-Image.png" width="100" height="100" class="rounded-circle img-thumbnail img-fluid"/>
        </div>
        <div class="col-5">
            <div class="row">
                <h6 class = "font-body">Hello</h6>
                <h2 class = "font-blue font-h1">@Model.CurrentLandlord.FirstName</h2>
                @if (Model.CurrentLandlord.NumOfProperties > 0)
                {
                    <h6 class = "font-body">View your properties</h6>
                    <div>
                        <a class="btn btn-primary btn-lg mt-3 align-middle" href='@Url.Action("ViewProperties", "Landlord", new{id = Model.CurrentLandlord.LandlordId})'>View Properties</a>
                    </div>
                }
                else
                {
                    <h6 class = "font-body">Start adding your properties to the portal, to get matches</h6>
                    <div>
                        <a class="btn btn-primary btn-lg mt-3 align-middle" href='@Url.Action("AddNewProperty_Begin", "Property", null)'>Add Properties</a>
                    </div>
                }
                @if (!Model.CurrentLandlord.CharterApproved)
                {
                    <p class="font-subtitle font-orange mt-1">
                        *your properties won't go live until the ChangeAhead charter signup has been approved by the ChangeAhead admins. You can still add and update draft properties before then.
                    </p>   
                }
            </div>
        </div>
        <div class="col 3">
            <div class="row border rounded mb-1">
                <div class="col-3">
                    @if (Model.CurrentLandlord.CharterApproved)
                    {
                        <h1>
                            <i class="bi bi-check font-blue icon-lg"></i>
                        </h1>
                    }
                    else
                    {
                        <h1>
                            <i class="bi bi-x font-blue icon-lg"></i>
                        </h1>
                    }
                </div>
                <div class="col text-end">
                    <p class = "font-smallBody">Charter Approval State</p>
                </div>
            </div>
            <div class="row border rounded mb-1">
                <div class="col-3">
                    <h1>
                        <i class="bi bi-house-door font-blue icon-lg"></i>
                    </h1>
                </div>
                <div class="col text-end">
                    <h1 class="font-statistics">
                        @Model.CurrentLandlord.NumOfProperties
                    </h1>
                    <p class="font-smallBody">Total Properties</p>
                </div>
            </div>
            <div class="row border rounded mb-1">
                <div class="col-3">
                    <h1>
                        <i class="bi bi-house-heart font-blue icon-lg"></i>
                    </h1>
                </div>
                <div class="col text-end">
                    <h1 class="font-statistics">
                        @Model.CurrentLandlord.NumOfProperties
                    </h1>
                    <p class="font-smallBody">Live Properties</p>
                </div>
            </div>
        </div>
        <div class="col-4">
            <row>
                <h6 class="font-h3">My Properties</h6>
            </row>
            @foreach(var property in Model.Properties!)
                {
                    <row>
                        @{ await Html.RenderPartialAsync("_DashboardPropertyDisplayPartial", property); }
                    </row>
                }
            <div>
                <a class="btn btn-outline-primary mt-3 align-middle" href='@Url.Action("ViewProperties", "Landlord", new{id = Model.CurrentLandlord.LandlordId})'>View All</a>
            </div>
        </div>
    </div>
</div>