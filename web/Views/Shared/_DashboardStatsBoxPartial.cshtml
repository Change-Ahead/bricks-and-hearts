@model StatBoxModel

<div class="row rounded mb-3 mx-0 p-2 statBox">
    <div class="col-auto">
        <h1>
            <i class="bi @Model.IconName statbox-icon"></i>
        </h1>
    </div>
    <div class="col-auto">
        <h1 class="font-statistics">
            @Model.Stat
        </h1>
        <p class="font-smallBody">@Model.StatDescription</p>
    </div>
</div>