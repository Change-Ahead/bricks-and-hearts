@using BricksAndHearts.Auth
<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BricksAndHearts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap-icons/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>

<body class="d-flex flex-column h-100">
<header>
    <nav class="navbar navbar-primary navbar-expand-sm navbar-light border-bottom bg-white box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold ms-4 me-5" asp-controller="Home" asp-action="Index">Bricks & Hearts</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse">
                <div class="navbar-nav me-auto">
                    <a class="nav-link text-dark mx-3" asp-controller="Landlord" asp-action="@(User.IsInRole("Landlord") ? "MyDashboard" : "RegisterGet")">List your properties</a>
                    <a class="nav-link text-dark mx-3" asp-controller="Admin" asp-action="AdminDashboard">Facilitate rentals</a>
                </div>

                <div class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("Landlord"))
                        {
                            @* TODO BNH-99: Replace icon with profile picture *@

                            <a asp-controller="Landlord" asp-action="Profile" asp-route-id="@(((BricksAndHeartsUser)User.Identity).LandlordId!.Value)" class="bi bi-person-circle nav-link pt-0 pb-0 fs-4 ms-3"></a>
                        }
                        @using (Html.BeginForm("Logout", "Login", FormMethod.Post))
                        {
                            <button type="submit" class="btn btn-thin btn-outline-primary mx-3">Log out</button>
                        }
                    }
                    else
                    {
                        <a class="btn btn-thin btn-outline-primary mx-3" asp-controller="Login" asp-action="Google">Log in</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    @if (User.Identity?.IsAuthenticated == true)
    {
        @if (User.IsInRole("Admin"))
        {
            <nav class="navbar navbar-secondary navbar-expand-sm navbar-dark bg-primary py-1">
                <a asp-controller="Admin" asp-action="AdminDashboard" class="nav-link text-light mx-3">Dashboard</a>
                <div class="vr my-2"></div>
                <a asp-controller="Admin" asp-action="GetAdminList" class="nav-link text-light mx-3">Admin list</a>
                <div class="vr my-2"></div>
                <a asp-controller="Admin" asp-action="LandlordList" class="nav-link text-light mx-3">Landlord list</a>
                <div class="vr my-2"></div>
                <a asp-controller="Admin" asp-action="TenantList" class="nav-link text-light mx-3">Tenant list</a>
                <div class="vr my-2"></div>
                <a asp-controller="Property" asp-action="SortProperties" class="nav-link text-light mx-3">Property overview</a>
            </nav>
        }
        @if (User.IsInRole("Landlord"))
        {
            <nav class="navbar navbar-secondary navbar-expand-sm navbar-dark bg-primary py-1">
                <a asp-controller="Landlord" asp-action="MyDashboard" class="nav-link text-light mx-3">Dashboard</a>
                <div class="vr my-2"></div>
                <a asp-controller="Landlord" asp-action="ViewProperties" class="nav-link text-light mx-3">Properties</a>
            </nav>
        }
    }
</header>


<main role="main">
    <div class="container mt-3 pb-4">
        @{
            if (TempData["FlashMessages"] != null)
            {
                var flashMessages = TempData["FlashMessages"] as string[];
                var flashTypes = TempData["FlashTypes"] as string[];
                for (int i = 0; i < flashMessages!.Length; i++)
                {
                    <div class="alert alert-@flashTypes![i]" role="alert">
                    @flashMessages[i]
                    </div>
                }
            }
        }
        @RenderBody()
    </div>
</main>


<footer class="mt-auto py-3 border-top footer text-muted bg-white">
    <div class="container">
        <div class="nav">
            <span class="navbar-text me-3">&copy; 2022 - Bricks & Hearts</span>
            <a asp-controller="Home" asp-action="Privacy" class="nav-link">Privacy</a>
            <a asp-controller="Home" asp-action="ContactUs" class="nav-link">Contact</a>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>