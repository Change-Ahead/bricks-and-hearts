@model BricksAndHearts.ViewModels.LandlordCreateModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register as Landlord</h1>

<p>TODO: Description of who we're looking for here</p>
<p>Tell us a bit about yourself</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="LandlordRegistration" asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group my-3">
                <label class="control-label">Company (optional)</label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" style="max-width: 12rem"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
