@model PropertyViewModel

<h1 class="font-h1">What kind of tenant would you prefer?</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<div class="my-4 py-3">
    <label class="form-label mb-3">Select all that apply:</label>

    <div class="row g-3">
        <div class="col-auto d-grid">
            @Html.CheckBox("LandlordRequirements.AcceptsSingleTenant", Model.LandlordRequirements.AcceptsSingleTenant ?? false, new { @class = "btn-check" })
            <label asp-for="LandlordRequirements.AcceptsSingleTenant" class="btn btn-outline-blue shadow-none pill-check">Single tenant</label>
        </div>
        <div class="col-auto d-grid">
            @Html.CheckBox("LandlordRequirements.AcceptsCouple", Model.LandlordRequirements.AcceptsCouple ?? false, new { @class = "btn-check" })
            <label asp-for="LandlordRequirements.AcceptsCouple" class="btn btn-outline-blue shadow-none pill-check">Couple</label>
        </div>
        <div class="col-auto d-grid">
            @Html.CheckBox("LandlordRequirements.AcceptsFamily", Model.LandlordRequirements.AcceptsFamily ?? false, new { @class = "btn-check" })
            <label asp-for="LandlordRequirements.AcceptsFamily" class="btn btn-outline-blue shadow-none pill-check">Family (3+)</label>
        </div>
    </div>
</div>

<div class="my-4 py-3">
    <label class="form-label">Will you accept tenants with pets?</label>

    <div class="form-check">
        <input type="radio" asp-for="LandlordRequirements.AcceptsPets" value="true" id="PetsTrue" class="form-check-input" required>
        <label for="PetsTrue" class="form-check-label">Yes</label>
    </div>
    <div class="form-check">
        <input type="radio" asp-for="LandlordRequirements.AcceptsPets" value="false" id="PetsFalse" class="form-check-input" required>
        <label for="PetsFalse" class="form-check-label">No</label>
    </div>
</div>

<div class="my-4 py-3">
    <label class="form-label">Will you accept tenants:</label>

    <div class="form-check">
        @Html.CheckBox("LandlordRequirements.AcceptsCredit", Model.LandlordRequirements.AcceptsCredit ?? false, new { @class = "form-check-input" })
        <label asp-for="LandlordRequirements.AcceptsCredit" class="form-check-label">
            on Universal Credit?
        </label>
    </div>
    <div class="form-check">
        @Html.CheckBox("LandlordRequirements.AcceptsBenefits", Model.LandlordRequirements.AcceptsBenefits ?? false, new { @class = "form-check-input" })
        <label asp-for="LandlordRequirements.AcceptsBenefits" class="form-check-label">
            on Housing Benefits?
        </label>
    </div>
    <div class="form-check">
        @Html.CheckBox("LandlordRequirements.AcceptsNotEET", Model.LandlordRequirements.AcceptsNotEET ?? false, new { @class = "form-check-input" })
        <label asp-for="LandlordRequirements.AcceptsNotEET" class="form-check-label">
            not in EET (Employment, Education, or Training)?
        </label>
    </div>
    <div class="form-check">
        @Html.CheckBox("LandlordRequirements.AcceptsOver35", Model.LandlordRequirements.AcceptsOver35 ?? false, new { @class = "form-check-input" })
        <label asp-for="LandlordRequirements.AcceptsOver35" class="form-check-label">
            That are over 35?
        </label>
    </div>
    <div class="form-check">
        @Html.CheckBox("LandlordRequirements.AcceptsWithoutGuarantor", Model.LandlordRequirements.AcceptsWithoutGuarantor ?? false, new { @class = "form-check-input" })
        <label asp-for="LandlordRequirements.AcceptsWithoutGuarantor" class="form-check-label">
            without a rent guarantor?
        </label>
    </div>
</div>