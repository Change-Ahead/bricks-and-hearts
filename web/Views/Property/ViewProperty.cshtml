@model PropertyViewModel

@{
    ViewData["Title"] = "View Property";
}

<div class="container">
    <div class="row mb-3">
        <h3>View property</h3>
    </div>
    <div class="row mb-3 ms-0">
        <div class="col-7 border p-2">
            <p>@Model.Address.AddressLine1</p>
            <p>Current rental: </p>
            <p>Looking for tenant: </p>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <h4>Property details</h4>
        </div>
        <div class="col-4">
            <h4>Letting Profile</h4>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <table class="table table-bordered">
                <tr>
                    <td>Address</td>
                    <td>@Model.Address.AddressLine1</td>
                </tr>
                <tr>
                    <td>Type</td>
                    <td>@Model.PropertyType</td>
                </tr>
                <tr>
                    <td>Bedrooms</td>
                    <td>@Model.NumOfBedrooms</td>
                </tr>
                <tr>
                    <td>Rent</td>
                    <td>@Model.Rent</td>
                </tr>
                <tr>
                    <td>Lease duration</td>
                    <td> </td>
                </tr>
            </table>
            
        </div>
        <div class="col-4">
            
        </div>
    </div>
    @Html.ActionLink("Property images", "ListPropertyImages", "Property", new { propertyId = Model.PropertyId }, new { @class = "btn btn-primary" })
</div>

<button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#deleteModal">
    Delete
</button>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelModalLabel">Delete property</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this property? 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <input type="button" class="btn btn-outline-danger" value="Delete Property" onclick="location.href='@Url.Action("DeleteProperty", "Property", new{ PropertyId = Model.PropertyId})'" />
            </div>
        </div>
    </div>
</div>
