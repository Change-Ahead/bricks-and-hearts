@model PropertyDetailsViewModel

@functions
{
    void GetLivePill(string availability, string colourClass, string icon)
    {
        <span class="status-pill-@colourClass rounded-pill px-3 py-1">
            <i class="bi bi-@icon me-1"></i>
            @availability
        </span>
    }
}

@if (Model.Property.Availability != AvailabilityState.Draft && Model.Owner.CharterApproved && !Model.Owner.Disabled)
{
    GetLivePill("Live", "live","eye");
}
else
{
    GetLivePill("Pending", "draft","clock");
}