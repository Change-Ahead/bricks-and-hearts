@model PropertyDetailsViewModel

@functions
{
    void GetAvailabilityPill(string availability, string icon)
    {
        <span class="status-pill-@availability.ToLower() rounded-pill px-3 py-1">
            <i class="bi bi-@icon me-1"></i>
            @availability
        </span>
    }
}

@switch (Model.Property!.Availability)
{
    case AvailabilityState.Occupied:
        GetAvailabilityPill("Occupied", "people");
        break;
    case AvailabilityState.Unavailable:
        GetAvailabilityPill("Unavailable", "x-lg");
        break;
    case AvailabilityState.Draft:
        GetAvailabilityPill("Draft", "clock");
        break;
    default:
        GetAvailabilityPill("Live", "eye");
        break;
}