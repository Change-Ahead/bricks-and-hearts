@model PropertyInputFormViewModel

@{
    ViewData["Title"] = "Add Property";
}

<h1>Edit property</h1>

<hr/>

@if (Model.Step > 1)
{
    <div class="mb-4">
        @*QQQ back button leads to cancel*@
        <a asp-controller="Property" asp-action="PropertyInputCancel" asp-route-step="@(Model.Step - 1)" asp-route-propertyId="@Model.PropertyId" asp-route-landlordId="@Model.LandlordId" class="link-secondary"> Back </a>
    </div>
}

<partial name=@("_PropertyInputFormStep" + Model.Step) model="Model"/>

<div class="mt-4">
    @if (Model.Step < PropertyInputFormViewModel.MaximumStep)
    {
        <input type="submit" value="Save and continue" class="btn btn-primary"/>
    }
    else
    {
        <input type="submit" value="Submit" class="btn btn-success"/>
    }
    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#cancelModal">
        Stop Editing
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelModalLabel">Stop editing property</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to stop editing this property? All progress up to this point will be saved.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form method="post" asp-controller="Property" asp-action="PropertyInputCancel" asp-route-landlordId="@Model.LandlordId">
                    <input type="submit" value="Stop Editing" class="btn btn-danger"/>
                </form>
            </div>
        </div>
    </div>
</div>