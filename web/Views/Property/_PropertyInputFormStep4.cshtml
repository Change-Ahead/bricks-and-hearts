@model BricksAndHearts.ViewModels.PropertyInput.PropertyInputModelStep4

<h1 class="font-h1">Property description</h1>

<div asp-validation-summary="All" class="text-danger"></div>
<form method="post">
    <div class="my-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control textarea-description" rows="12" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    @{ await Html.RenderPartialAsync("_PropertyFormButtons", Model); }
</form>