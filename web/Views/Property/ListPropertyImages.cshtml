@model ImageListViewModel

@{
    ViewData["Title"] = "Image List";
}

<h2>Images available for property @Model.PropertyId</h2>

@foreach (var file in Model.FileList!)
{
    <figure class="figure">
        <img src=@file.FileUrl class="figure-img rounded" alt="Property image @file.FileName">
        <figcaption class="figure-caption" type="button" data-bs-toggle="modal" data-bs-target="#deleteModal" 
                    onclick="setValue('deleteFileName', '@file.FileName'); setValue('deletePropertyId', '@Model.PropertyId')"><i class="bi bi-trash"></i></figcaption>
    </figure>
}


@using (Html.BeginForm("AddPropertyImages", "Property", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>Please upload images of the property</div>
    <input type="hidden" id="propertyId" name="propertyId" value=@Model.PropertyId>
    <input name="images" type="file" multiple accept="image/*">
    <input type="submit" value="Upload Image"/>
}

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this image?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form method="post" asp-controller="Property" asp-action="DeletePropertyImage">
                    <input type="hidden" id="deletePropertyId" name="propertyId" value="">
                    <input type="hidden" id="deleteFileName" name="fileName" value="">
                    <input type="submit" value="Delete" class="btn btn-danger"/>
                </form>
            </div>
        </div>
    </div>
</div>