@model ImageListViewModel

@{
    ViewData["Title"] = "Image List";
}

@{
    if (TempData["MultipleFlashMessages"] != null)
    {
        var flashMessages = TempData["MultipleFlashMessages"] as string[];
        var flashTypes = TempData["MultipleFlashTypes"] as string[];
        for (int i = 0; i < flashMessages!.Length; i++)
        {
            <div class="alert alert-@flashTypes![i]" role="alert">
            @flashMessages[i]
            </div>
        }
    }
}

<h2>Images available for property @Model.PropertyId</h2>

<table>
    @foreach (var file in Model.FileList!)
    {
        <tr>
            <td>
                @using (Html.BeginForm("DisplayPropertyImage", "Property", FormMethod.Post))
                {
                    <input type="hidden" id="propertyId" name="propertyId" value=@Model.PropertyId>
                    <input type="hidden" id="fileName" name="fileName" value="@file">
                    <button type="submit" class="btn btn-primary">Display @file</button>
                }
            </td>
            <td>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                    onclick="setValue('deleteFileName', '@file'); setValue('deletePropertyId', '@Model.PropertyId')">
                Delete @file
                </button>
            </td>
        </tr>
    }
</table>

@using (Html.BeginForm("AddPropertyImages", "Property", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>Please upload images of the property</div>
    <input type="hidden" id="propertyId" name="propertyId" value=@Model.PropertyId>
    <input name="images" type="file" multiple accept="image/*">
    <input type="submit" value="Upload Image" />
}

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this image?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form method="post" asp-controller="Property" asp-action="DeletePropertyImage">
                    <input type="hidden" id="deletePropertyId" name="propertyId" value="">
                    <input type="hidden" id="deleteFileName" name="fileName" value="">
                    <input type="submit" value="Delete" class="btn btn-danger"/>
                </form>
            </div>
        </div>
    </div>
</div>