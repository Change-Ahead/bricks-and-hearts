@model LandlordListModel

@{
    ViewData["Title"] = "Landlord List";
}

<h2>Unapproved Landlords</h2>

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Company Name</th>
        <th scope="col">Charter Provided by Landlord?</th>
        <th scope="col">Charter Approval Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var landlord in Model.UnapprovedLandlords)
    {
        <tr class ="clickable"
            onclick="location.href = '@Url.Action("Profile", "Landlord", new { id = landlord!.Id })'">
            <td>@landlord.FirstName</td>
            <td>@landlord.LastName</td>
            <td>@landlord.CompanyName</td>
            @if (landlord.LandlordProvidedCharterStatus)
                {
                    <td>Yes</td>
                }
                else
                {
                    <td>No</td>
                }
            @if (landlord.CharterApproved)
            {
                <td>Approved</td>
            }
            else
            {
                <td>Pending</td>
            }
        </tr>
    }
    </tbody>
</table>