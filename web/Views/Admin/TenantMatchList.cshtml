@model TenantMatchListModel

@{
    ViewData["Title"] = "Tenant List";
}

<partial name="_MatchListPropertyViewPartial" model="@Model.LandlordAndProperty"/>

<table class="table">
    <thead>
    @if (Model.TenantList!.Count > 0)
    {
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Postcode</th>
            <th scope="col">Type</th>
            <th scope="col">Has Pet?</th>
            <th scope="col">In ETT?</th>
            <th scope="col">On Universal Credit?</th>
            <th scope="col">On Housing Benefits?</th>
            <th scope="col">Over 35?</th>
            <th scope="col">Match</th>
        </tr>
    }
    else
    {
        <div>There are no matches for this property.</div>
    }
    </thead>
    <tbody>
    @foreach (var tenant in Model.TenantList!)
    {
        <tr>
            <td>@tenant.Name</td>
            <td>@tenant.Email</td>
            <td>@tenant.Phone</td>
            <td>@tenant.Postcode!.Postcode</td>
            <td>@tenant.Type</td>
            <td>@tenant.HasPet</td>
            <td>@tenant.ETT</td>
            <td>@tenant.UniversalCredit</td>
            <td>@tenant.HousingBenefits</td>
            <td>@tenant.Over35</td>
            <td>
                @using (Html.BeginForm("SendMatchLinkEmail", "Tenant", new
                {
                    propertyLink = Model.LandlordAndProperty.Property!.PublicViewLink,
                    tenantEmail = tenant.Email,
                    currentPropertyId = Model.LandlordAndProperty.Property.PropertyId
                },
                    FormMethod.Post))
                {
                    <button type="submit" class="btn btn-thin btn-outline-primary mx-3">Match</button>
                }
            </td>
        </tr>
    }
    </tbody>
</table>